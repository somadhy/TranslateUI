<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TranslateUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="200"
        x:Class="TranslateUI.Views.CloseBehaviorDialog"
        x:DataType="vm:CloseBehaviorDialogViewModel"
        Title="{DynamicResource CloseDialogTitle}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        CanResize="False">
    <StackPanel Margin="16" Spacing="12">
        <TextBlock Text="{DynamicResource CloseDialogMessage}" TextWrapping="Wrap" />

        <CheckBox Content="{DynamicResource CloseDialogDontShowAgain}"
                  IsChecked="{Binding DontShowAgain}" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="{DynamicResource CloseDialogExitButton}" Click="OnExitClicked" />
            <Button Content="{DynamicResource CloseDialogMinimizeButton}" Click="OnMinimizeClicked" />
            <Button Content="{DynamicResource CancelButton}" Click="OnCancelClicked" />
        </StackPanel>
    </StackPanel>
</Window>
