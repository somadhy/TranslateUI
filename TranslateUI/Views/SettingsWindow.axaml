<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TranslateUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="200"
        x:Class="TranslateUI.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        Title="{DynamicResource SettingsTitle}">
    <Grid RowDefinitions="*,Auto" Margin="16">
        <StackPanel Spacing="12">
            <StackPanel Spacing="6">
                <TextBlock Text="{DynamicResource InterfaceSectionTitle}" FontWeight="SemiBold" />
                <Border BorderThickness="1" BorderBrush="#333333" Padding="8">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{DynamicResource UiLanguageLabel}" />
                        <ComboBox ItemsSource="{Binding UiLanguages}"
                                  SelectedItem="{Binding SelectedUiLanguage}"
                                  Width="220">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="6">
                <TextBlock Text="{DynamicResource LlmSectionTitle}" FontWeight="SemiBold" />
                <Border BorderThickness="1" BorderBrush="#333333" Padding="8">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{DynamicResource OllamaUrlLabel}" />
                        <TextBox Text="{Binding OllamaUrl}" />

                        <TextBlock Text="{DynamicResource DefaultModelLabel}" />
                        <ComboBox ItemsSource="{Binding ModelOptions}"
                                  SelectedItem="{Binding SelectedModel}"
                                  Width="220" />

                        <TextBlock Text="{DynamicResource DefaultSourceLanguageLabel}" />
                        <ComboBox ItemsSource="{Binding LanguageOptions}"
                                  SelectedItem="{Binding SelectedSourceLanguage}"
                                  Width="220">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="{DynamicResource DefaultTargetLanguageLabel}" />
                        <ComboBox ItemsSource="{Binding LanguageOptions}"
                                  SelectedItem="{Binding SelectedTargetLanguage}"
                                  Width="220">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="6">
                <TextBlock Text="{DynamicResource DebugSectionTitle}" FontWeight="SemiBold" />
                <Border BorderThickness="1" BorderBrush="#333333" Padding="8">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{DynamicResource LogLevelLabel}" />
                        <ComboBox ItemsSource="{Binding LogLevels}"
                                  SelectedItem="{Binding SelectedLogLevel}"
                                  Width="220">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ResourceKey, Converter={StaticResource ResourceKeyToStringConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="{DynamicResource LogFilePathLabel}" />
                        <TextBox Text="{Binding LogFilePath}" />
                        <Button Content="{DynamicResource OpenLogFileButton}"
                                Width="160"
                                Command="{Binding OpenLogFileCommand}" />
                        <TextBlock Text="{DynamicResource LogFilePathHint}" FontSize="12" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="{DynamicResource CloseButton}" Click="OnCloseClicked" />
        </StackPanel>
    </Grid>
</Window>
